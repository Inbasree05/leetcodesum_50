class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        int n=nums1.length+nums2.length;
        int[] ans=new int[n];
        int k=0;
        for(int num:nums1) ans[k++]=num;
        for(int num:nums2) ans[k++]=num;
        Arrays.sort(ans);
        if(n%2==1){
            return ans[n/2];
        }
        else{
            return (ans[n/2]+ans[(n/2)-1])/2.0;
        }
    }
}
