class Solution {
    public int concatenatedBinary(int n) {
        int MOD=1000000007;
        long result=0;
        int l=0;
        for(int i=1;i<=n;i++){
            if((i&(i-1))==0){
                l++;
            }
            result=((result<<l)+i)%MOD;
        }
        return (int)result;
    }
}
